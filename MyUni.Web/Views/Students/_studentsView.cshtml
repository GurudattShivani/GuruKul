@using System.Diagnostics.Eventing.Reader
@model IEnumerable<Gurukul.Business.Student>

@{
    var isEmpty = Model == null || Model.Count() == 0;
}


@if (isEmpty)
{
    <div class="alert alert-warning">
        Sorry, there are no results
    </div>
}
else
{
    <table id="tblStudentsView" name="tblStudentsView" class="table table-condensed table-hover table-bordered table-striped dataTable display" role="grid">
        <thead>
            <tr class="bg-light-blue-gradient">
                <th></th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Enrolled Date</th>
                <th></th>
            </tr>
        </thead>
    </table>
}